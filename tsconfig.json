{
  "compilerOptions": {
    "target": "ESNext",
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "types": ["vite/client"],
    "allowJs": false,
    "skipLibCheck": false,
    "esModuleInterop": false,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["xui/*"],
      "@comps/*": ["xui/components/*"],
      "@hooks/*": ["xui/hooks/*"],
      "@utils/*": ["xui/utils/*"]
    },
    "noEmit": true,
    "jsx": "react"
  },
  "include": ["./xui"]
}
